{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./.tmp/build/",
        "allowJs": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "files": [
        "src/visual.ts",
        "src/validator.ts",
        "src/logger.ts",
        "src/i18n.ts",
        "src/cards/apiSettingsCard.ts",
        "src/cards/styleSettingsCard.ts"
    ]
}